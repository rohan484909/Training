
<%if user_signed_in?%>
  <p id="notice"><%= notice %></p>
  <h1><%= current_user.first_name+"  "+current_user.last_name%></h1>
  <%=image_tag current_user.image.url(:medium)%>
  <h1>Products</h1>

  <%= form_tag url: search_path ,method: :get, remote: true do %>
    <%= text_field_tag :search_str %>
    <%=submit_tag 'Send' %>
  <%end%>
  <table>
    <thead>
      <tr>
        <th >Name <span class= "sort"  id= "name_asc"> asc </span>|<span class ="sort" id= "name_desc"> desc </span> </th>
        <th >Price <span class= "sort"  id= "price_asc"> asc </span>|<span class ="sort" id= "price_desc"> desc </span></th>
        <th colspan="3"></th>
      </tr>
    </thead><br/>
      <tbody id= "products-data">
        <%= render partial: 'list' %>
      </tbody>
  </table><br/>
  <div id="pagination-links">
    <%= render partial: 'pagination' %>
  </div><br/>
  <%= link_to 'Log Out', destroy_user_session_path, method: :delete,style: 'color:blue;' %>
  <%= link_to 'New Product', new_product_path %>
  <%= link_to 'Update User',edit_user_registration_path%>
<%else%>
  <% redirect_to new_user_session_path%>
<%end%>
