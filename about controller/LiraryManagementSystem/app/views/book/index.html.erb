<h1>Listing of Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Content</th>
			<th colspan="3"></th>
		</tr>

	</thead>
	<tbody>
		<%@books.each do |book|%>
		<tr>
			<td><%= link_to book.title, "/book/#{book.id}/show"%> </td>

			<td> <%= book.content %> </td>
			
			
		<% end %>
	</tbody>
</table>
<br>
     
    <%= link_to "new Book",'/book/new'%>
