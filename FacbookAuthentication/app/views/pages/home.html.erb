<h1>Home Page</h1>
  <%if current_user%>
    <div><%= current_user.name%></div>
    <%= image_tag (current_user.image), style:"height:100px;width:200px;"%>
    <%=current_user.email%><br/>
    <%= current_user.provider%>
  <%end%>
    
  <% unless current_user %>
    <%= button_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, style:"color:blue;" %>
    <%= button_to "Sign in with Github",user_github_omniauth_authorize_path,style:"color:orange;"%>
    <button><%= link_to "Create New Account",new_new_user_path,style:"color:orange;"%></button>
  <% else %>
    <%= link_to "Logout", destroy_user_session_path, method: :delete %>
  <% end %>
    
    