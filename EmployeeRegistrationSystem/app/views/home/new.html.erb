    <script>
     
      $(document).ready(function() {
		    $('#next1').click(function(event){
			
					$.ajax({
           type: "POST",
           url: "/next1",
           data: {
           	name: $("#name").val(),
           	email: $("#email").val(),
           }, 
          });
        })
		  
	      $('#next2').click(function(event){
				  $.ajax({
	         type: "POST",
	         url: "/next1",
	         data: {
	         	address: $("#phone").val(),
	         	phone: $("#address").val(),
	         }, 
	        });
				});
      });
    </script>

